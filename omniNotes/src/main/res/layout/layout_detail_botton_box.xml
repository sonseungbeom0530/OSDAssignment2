<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root_detail_bottom_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_bottom_box"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Bottom Menu"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_detail_bottom_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color1" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color2" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color3" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color4" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color5" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/v_detail_bottom_color6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_bottom_color6" />

            <ImageView
                android:id="@+id/iv_detail_bottom_checker6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="#000000"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_check" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="Pick Color"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detail_bottom_add_url"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_web_link"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Add URL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp"/>

    </LinearLayout>
</LinearLayout>